{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@shared/filter": [
        "libs/filter/src"
      ],
      "@shared/filter/*": [
        "libs/filter/src/*"
      ],
      "@shared/interceptor": [
        "libs/interceptor/src"
      ],
      "@shared/interceptor/*": [
        "libs/interceptor/src/*"
      ],
      "@shared/middleware": [
        "libs/middleware/src"
      ],
      "@shared/middleware/*": [
        "libs/middleware/src/*"
      ],
      "@shared/schema": [
        "libs/schema/src"
      ],
      "@shared/schema/*": [
        "libs/schema/src/*"
      ]
    }
  }
}